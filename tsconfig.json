{
  "compilerOptions": {
    "target": "es5", // compile to ES2015 (Babel will do the rest)
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true, // make TypeScript generate sourcemaps
    "outDir": "dist", // output directory to build to (irrelevant because we use Webpack most of the time)
    "jsx": "react",
    "noImplicitAny": false
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*.ts"
  ]
}